{
	"name": "run-on-save",
	"displayName": "Run Commands on File Save",
	"description": "Run configured shell commands when a file is saved in vscode, and output configured messages on status bar.",
	"icon": "images/logo.png",
	"version": "1.0.4",
	"license": "MIT",
	"publisher": "pucelle",
	"homepage": "https://github.com/pucelle/vscode-run-on-save",
	"repository": {
		"type": "git",
		"url": "https://github.com/pucelle/vscode-run-on-save.git"
	},
	"bugs": {
		"url": "https://github.com/pucelle/vscode-run-on-save/issues"
	},
	"engines": {
		"vscode": "^1.30.0"
	},
	"categories": [
		"Other"
	],
	"keywords": ["run on save", "save and run", "compile scss on save", "compile less on save"],
	"activationEvents": [
		"*"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "extension.enableRunOnSave",
				"title": "Run On Save: Enable"
			},
			{
				"command": "extension.disableRunOnSave",
				"title": "Run On Save: Disable"
			}
		],
		"configuration": {
			"title": "Run On Save",
			"type": "object",
			"properties": {
				"runOnSave.statusMessageTimeout": {
					"type": "number",
					"description": "Sepcify the timeout in millisecond after which the status message will be hidden",
					"default": 3000
				},
				"runOnSave.commands": {
					"type": "array",
					"description": "Shell commands array",
					"default": [],
					"items": {
						"type": "object",
						"properties": {
							"match": {
								"type": "string",
								"description": "Specify a RegExp source to match file path. eg. \"\\.scss$\" can used to match scss files",
								"default": ""
							},
							"notMatch": {
								"type": "string",
								"description": "Specify a RegExp source, the files whole path match it will be excluded. eg. \"[\\\\\\/]_[\\w-]+\\.scss$\" can be used to exclude scss library files",
								"default": ""
							},
							"command": {
								"type": "string",
								"description": "Specify the shell command string",
								"default": "echo ${file}"
							},
							"runningStatusMessage": {
								"type": "string",
								"description": "Specify the status bar message when the shell command began to execute",
								"default": ""
							},
							"finishStatusMessage": {
								"type": "string",
								"description": "Specify the status bar message after the shell command finished executing",
								"default": ""
							}
						}
					}
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "npm run compile && node ./node_modules/vscode/bin/test"
	},
	"devDependencies": {
		"typescript": "^3.1.4",
		"vscode": "^1.1.25",
		"tslint": "^5.8.0",
		"@types/node": "^8.10.25",
		"@types/mocha": "^2.2.42"
	}
}
